{
  "name": "windowsperf",
  "displayName": "Arm WindowsPerf",
  "description": "VS Code extension for performance analysis using WindowsPerf",
  "version": "0.0.1",
  "repository": "https://github.com/Arm-Software/vscode-windowsperf",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "windowsperf.openResultFile",
        "title": "WindowsPerf: Open result file",
        "icon": "$(new-file)"
      },
      {
        "command": "windowsperf.closeResultFile",
        "title": "WindowsPerf: Close result file",
        "icon": "$(close)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "windowsperf.openResultFile",
          "when": "view == samplingResults",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "windowsperf.closeResultFile",
          "when": "view == samplingResults && viewItem == sampleFile",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "windowsperf.closeResultFile",
          "when": "false"
        }
      ]
    },
    "viewsContainers": {
      "panel": [
        {
          "id": "windowsperf",
          "title": "WindowsPerf",
          "icon": "$(graph)"
        }
      ]
    },
    "views": {
      "windowsperf": [
        {
          "id": "samplingResults",
          "name": "Sampling Results Explorer"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "samplingResults",
        "contents": "In order to use WindowsPerf Sampling Results Explorer, open a WindowsPerf sampling result JSON file.\n[$(new-file) Open File](command:windowsperf.openResultFile)\nTo learn more about how to use WindowsPerf [read our docs](https://gitlab.com/Linaro/WindowsPerf/windowsperf/-/tree/main/wperf#wperf)."
      }
    ]
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "webpack --mode production",
    "watch": "webpack --watch",
    "package": "vsce package",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch --collectCoverage=false",
    "compile-schemas": "json2ts -i src/wperf/schemas/in/ -o src/wperf/schemas/out/"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/jest": "^29.5.12",
    "@types/node": "18.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "json-schema-to-typescript": "^14.0.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "vscode-uri": "^3.0.8",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx|js)$": [
        "ts-jest",
        {
          "tsconfig": "<rootDir>/tsconfig.json",
          "isolatedModules": true,
          "diagnostics": {
            "ignoreCodes": [
              "TS151001"
            ]
          }
        }
      ]
    },
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/*.test.+(ts|tsx)"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/*.d.ts",
      "!**/*.factories.ts",
      "!src/extension.ts",
      "!src/manifest.ts",
      "!src/vscode-api/**"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "lcov",
      "text"
    ]
  },
  "dependencies": {
    "ajv": "^8.13.0"
  }
}
